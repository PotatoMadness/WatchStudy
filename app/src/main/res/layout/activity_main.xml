<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.example.testevinfra.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_map_point" />

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_loc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:lineHeight="6sp"
                android:text="잠원동"
                android:textColor="#BDC1C6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_loc"
                android:layout_centerHorizontal="true"
                android:lineHeight="4sp"
                android:text="근처 충전소"
                android:textColor="#FBFDFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_center"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_25_radius"
                android:backgroundTint="#49494B"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:id="@+id/tv_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_loc"
                    android:lineHeight="6sp"
                    android:text="@={vm.timestamp}"
                    android:textColor="#BDC1C6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_enable_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_loc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:lineHeight="4sp"
                    android:text="3곳 충전가능"
                    android:textColor="#48D597"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/img_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_25_radius"
                android:backgroundTint="#49494B"
                android:padding="4dp"
                android:src="@drawable/icon_refresh" />
        </RelativeLayout>

        <include
            android:id="@+id/intro_main"
            layout="@layout/layout_intro_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>